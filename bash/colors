if tput setaf 1 &> /dev/null; then
  tput sgr0
  GREEN_FG=$(tput setaf 041)
  RED_FG=$(tput setaf 124)
  YELLOW_FG=$(tput setaf 155)
  MAGENTA_FG=$(tput setaf 171)
  CYAN_FG=$(tput setaf 33)
  WHITE_FG=$(tput setaf 15)
  CHALK_BLUE=$(tput setaf 33)
  BOLD=$(tput bold)
  RESET=$(tput sgr0)
else
  GREEN_FG="\033[1;32m"
  RED_FG="\033[1;31m"
  YELLOW_FG="\033[1;33m"
  MAGENTA_FG="\033[1;35m"
  CYAN_FG="\033[1;36m"
  WHITE_FG="\033[1;37m"
  CHALK_BLUE="\033[1;32m"
  BOLD=""
  RESET="\033[m"
fi
